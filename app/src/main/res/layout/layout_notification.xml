<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

  <ImageView
      android:layout_width="@dimen/notification_iconWidth"
      android:layout_height="@dimen/notification_iconHeight"
      android:layout_gravity="center_vertical"
      android:scaleType="center"
      android:src="@mipmap/ic_launcher"/>

  <TextView
      android:id="@+id/text_countDown"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      android:maxLines="1"
      android:textColor="@color/notification_countDownText"
      android:textSize="@dimen/notification_textCountdownSize"/>

  <ImageView
      android:id="@+id/button_replay"
      android:layout_width="@dimen/notification_buttonWidth"
      android:layout_height="@dimen/notification_buttonHeight"
      android:layout_gravity="center_vertical"
      android:background="@drawable/selector_notificationbutton"
      android:scaleType="centerInside"
      android:src="@drawable/ic_replay"/>

  <ImageView
      android:id="@+id/button_changeState"
      android:layout_width="@dimen/notification_buttonWidth"
      android:layout_height="@dimen/notification_buttonHeight"
      android:layout_gravity="center_vertical"
      android:layout_marginRight="@dimen/default_margin"
      android:background="@drawable/selector_notificationbutton"
      android:scaleType="centerInside"
      android:src="@drawable/ic_play"/>
</LinearLayout>